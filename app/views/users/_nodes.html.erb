    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.name %></td>
        <td><%= node.content %></td>
        <td><%= link_to 'Show', node %></td>
        <% if current_user &&  (current_user.admin? || current_user?(node.user) ) %>
					<td><%= link_to 'Edit', edit_node_path(node) %></td>
					<td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% else %>
					<td> </td><td> </td>
				<% end %>
      </tr>
    <% end %>
