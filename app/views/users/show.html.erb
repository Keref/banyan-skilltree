<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-10">
    <% if @user.nodes.any? %>
      <h3>Trees</h3>
      <ol class="nodes">
        <%= render 'nodes/listnodes', nodes: @user.nodes %>
      </ol>
    <% end %>
  </div>

</div>
