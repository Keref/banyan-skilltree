<table class="table table-striped">
  <thead>
    <tr>
			<th> </th>
			<th> </th>
      <th>Name</th>
      <th>Tags</th>
      <th>Content</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% nodes.each do |node| %>

				<tr>
					<td><%= rating_for node, "score", :cancel => false, :disable_after_rate => false, :readonly => true %></td>
					<td><%= image_tag(node.icon, width: 16, height: 16) %></td>
					<td><%= node.name %></td>
					<td><%= node.tag_list %></td>

					<td><%= link_to 'Show', node %></td>
					<% if current_user.has_skill?(node) %>
						<td><%= link_to 'Enroll now!', skills_path({node_id: node.id}), method: :post %></td>
					<% end %>

				</tr>

    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
<%= link_to 'Create a new Tree', new_node_path %>
<% end %>
