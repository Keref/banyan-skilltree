<!-- The menu is fixed and matches predefined categories -->

<ul class="nav nav-stacked" id="menu_accordion">				
</ul>
        
<style>
	.menucat {
		margin-bottom: 0;
		border: none;
	}
</style>        
<script>
var menuList = {};
menuList["Academics"] = { tag: "academics",
"Math": "maths",
"Science" : "science"
}
menuList["Information & Technology"] = { tag: "it",
"Web Development": "webdev",
"Programming Languages": "prog",
"Game Development": "gamedev",
"Databases": "db"

}

function displayMenu(){
	var menu_html = "";
	for (var ncat in menuList){
		var cat = menuList[ncat];
		var tagcat = menuList[ncat]["tag"];
		menu_html += '<li class="panel menucat"><a data-toggle="collapse" data-parent="#menu_accordion" href="#'
									+tagcat+'">'+ ncat +'</a><ul id="' + tagcat + '" class="collapse panel-collapse">';
		for (var subncat in cat){
			var tagsubcat = cat[subncat];
			if ( subncat != "tag") {
				menu_html += '<li><a href="/nodes?tags='+tagcat+'+'+tagsubcat+'">'+ subncat+'</a></li>';
			}
		}
		menu_html += '</ul></li>';
	}
	$("#menu_accordion").append(menu_html);
}

displayMenu();
</script>

